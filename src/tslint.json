{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "import-spacing": true,
        "whitespace": [
            true,
            "check-module"
        ],
        "semicolon": [
            true,
            "never"
        ]
    }
}
